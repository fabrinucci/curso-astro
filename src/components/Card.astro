---
import ButtonPost from './ButtonPost.astro';
interface Props {
  title: string;
  description: string;
  pubDate: string;
  tags: string[];
  slug?: string;
}

const { pubDate, title, description, tags, slug } = Astro.props;
---

<article
  class='flex flex-col items-center justify-center relative py-8 w-full p-[1px] transition-all rounded-md bg-gradient-to-b bg-blue-600 hover:bg-blue-500 cursor-pointer'
>
  <h3 class='text-white text-xl font-semibold'>
    {title}
  </h3>
  <p class='mt-3 text-white text-lg'>{description}</p>
  <p class='mt-3 text-white text-sm'>
    {pubDate}
  </p>
  <ul class='flex justify-center items-center gap-2'>
    {
      tags.map((tag) => (
        <li class='bg-blue-700 px-4 py-1 mt-3 rounded-md text-white'>{tag}</li>
      ))
    }
  </ul>
  <div class='mt-6'>
    <ButtonPost href={`posts/${slug}`}>
      Go to {title}
    </ButtonPost>
  </div>
</article>
